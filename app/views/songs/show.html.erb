<audio id="song" src="<%=@song.url%>">
<p>Your browser does not support the audio element.</p>
</audio>
<div class="show-song">
	<div><h3>Song #<%=@song.id%></h3></div>
	<div class="hint">
		<b class="hint-label">Hint:</b>
		<p>
			<%= @song.hints ? @song.hints : "No hints given" %>
		</p>
	</div>
	<div class="music-button-div">
		<a href="#" id="music-link" class="play-button"><span class="icon-play-circled music-button"></span></a>
	</div>
	<div class="toughness-header">
		How tough is it to guess?
	</div>
		<div class="toughness-labels">
		<span>Easy</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span>Tough</span>
	</div>
	<div class="toughness-bar">
		<% 10.times do |i| %>
			<a href="#" class="tough-number tough-number-<%=i+1%>" data-value="<%=i+1%>"><%=i+1%></a>
		<% end %>
	</div>

	<div class="show-guesses">
		<div class="new-guess-form">
			<input type="hidden" id="song-id" data-id="<%=@song.id%>">
			<textarea id="guess-text" placeholder="Guess here..."></textarea><br />
			<button id="submit-guess"class="btn btn-primary">Guess!</button>
		</div>
		<%= render partial: "guess_list", locals: {guesses: @guesses, votes: @votes} %>
	</div>
</div>


<%= javascript_include_tag "songshow" %>
